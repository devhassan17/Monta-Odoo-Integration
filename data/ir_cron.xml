<!-- data/ir_cron.xml -->
<odoo>
  <data noupdate="1">
    <record id="ir_cron_monta_eta_refresh" model="ir.cron">
      <field name="name">Monta: Refresh ETA (commitment_date)</field>
      <field name="model_id" ref="model_sale_order"/>
      <field name="state">code</field>
      <field name="code">model._cron_monta_eta_refresh()</field>
      <!-- every 5 minutes -->
      <field name="interval_number">5</field>
      <field name="interval_type">minutes</field>
      <field name="numbercall">-1</field>
      <field name="active">True</field>
    </record>
  </data>
</odoo>
