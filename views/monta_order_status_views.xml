<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action -->
    <record id="action_monta_order_status" model="ir.actions.act_window">
        <field name="name">Monta Order Status</field>
        <field name="res_model">monta.order.status</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Monta status snapshots yet.
            </p>
            <p>Snapshots of Monta order status will appear here.</p>
        </field>
    </record>

    <!-- Menu: under Sales (module already depends on sale) -->
    <menuitem id="menu_monta_root"
              name="Monta"
              parent="sale.sale_menu_root"
              sequence="95"
              groups="base.group_user"/>

    <menuitem id="menu_monta_order_status"
              name="Order Status"
              parent="menu_monta_root"
              action="action_monta_order_status"
              sequence="10"
              groups="base.group_user"/>

    <!-- Tree/List view (read-only in UI) -->
    <record id="view_monta_order_status_list" model="ir.ui.view">
        <field name="name">monta.order.status.list</field>
        <field name="model">monta.order.status</field>
        <field name="arch" type="xml">
            <tree string="Monta Orders" create="0" delete="0" edit="0">
                <field name="order_name"/>
                <field name="sale_order_id"/>
                <field name="monta_order_ref"/>
                <field name="order_status"/>
                <field name="delivery_message"/>
                <field name="track_trace_url"/>
                <field name="delivery_date"/>
                <field name="last_sync"/>
            </tree>
        </field>
    </record>

    <!-- Form view (read-only in UI) -->
    <record id="view_monta_order_status_form" model="ir.ui.view">
        <field name="name">monta.order.status.form</field>
        <field name="model">monta.order.status</field>
        <field name="arch" type="xml">
            <form string="Monta Order Status" create="0" delete="0" edit="0">
                <group>
                    <group>
                        <field name="order_name" readonly="1"/>
                        <field name="sale_order_id" readonly="1"/>
                        <field name="monta_order_ref" readonly="1"/>
                        <field name="order_status" readonly="1"/>
                        <field name="delivery_message" readonly="1"/>
                    </group>
                    <group>
                        <field name="track_trace_url" readonly="1"/>
                        <field name="delivery_date" readonly="1"/>
                        <field name="last_sync" readonly="1"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_monta_order_status_search" model="ir.ui.view">
        <field name="name">monta.order.status.search</field>
        <field name="model">monta.order.status</field>
        <field name="arch" type="xml">
            <search string="Search Monta Status">
                <field name="order_name"/>
                <field name="monta_order_ref"/>
                <field name="order_status"/>
                <field name="sale_order_id"/>
                <filter name="today" string="Synced Today"
                        domain="[('last_sync','&gt;=', context_today().strftime('%%Y-%%m-%%d 00:00:00'))]"/>
            </search>
        </field>
    </record>

</odoo>
