<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- LIST (show everything so your dummy rows are visible) -->
  <record id="view_monta_order_status_list" model="ir.ui.view">
    <field name="name">monta.order.status.list</field>
    <field name="model">monta.order.status</field>
    <field name="arch" type="xml">
      <list string="Monta Order Status" create="0" delete="0" editable="top">
        <field name="order_name"/>
        <field name="sale_order_id"/>
        <field name="status"/>
        <field name="status_code"/>
        <field name="source"/>
        <field name="delivery_message" optional="hide"/>
        <field name="monta_order_ref" string="Monta Order Id/Number"/>
        <field name="track_trace" string="Track &amp; Trace URL"/>
        <field name="delivery_date"/>
        <field name="last_sync"/>

        <!-- tech fields (optional but you asked to show everything) -->
        <field name="create_date" optional="hide"/>
        <field name="create_uid" optional="hide"/>
        <field name="write_date" optional="hide"/>
        <field name="write_uid" optional="hide"/>
      </list>
    </field>
  </record>

  <!-- FORM (simple read-only) -->
  <record id="view_monta_order_status_form" model="ir.ui.view">
    <field name="name">monta.order.status.form</field>
    <field name="model">monta.order.status</field>
    <field name="arch" type="xml">
      <form string="Monta Order Status">
        <sheet>
          <group>
            <group>
              <field name="order_name" readonly="1"/>
              <field name="sale_order_id" readonly="1"/>
              <field name="status" readonly="1"/>
              <field name="status_code" readonly="1"/>
              <field name="source" readonly="1"/>
            </group>
            <group>
              <field name="delivery_message" readonly="1"/>
              <field name="monta_order_ref" readonly="1"/>
              <field name="track_trace" readonly="1"/>
              <field name="delivery_date" readonly="1"/>
              <field name="last_sync" readonly="1"/>
            </group>
          </group>
          <group string="Technical" colspan="4">
            <field name="create_date" readonly="1"/>
            <field name="create_uid" readonly="1"/>
            <field name="write_date" readonly="1"/>
            <field name="write_uid" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- SEARCH -->
  <record id="view_monta_order_status_search" model="ir.ui.view">
    <field name="name">monta.order.status.search</field>
    <field name="model">monta.order.status</field>
    <field name="arch" type="xml">
      <search string="Search Order Status">
        <field name="order_name"/>
        <field name="sale_order_id"/>
        <field name="status"/>
        <field name="status_code"/>
        <field name="source"/>
        <field name="monta_order_ref"/>
        <field name="track_trace"/>
        <filter name="src_orders" string="Orders" domain="[('source','=','orders')]"/>
        <filter name="src_shipments" string="Shipments" domain="[('source','=','shipments')]"/>
        <filter name="recent" string="Synced Today" domain="[('last_sync','&gt;=',(context_today()))]"/>
      </search>
    </field>
  </record>

  <!-- ACTION -->
  <record id="action_monta_order_status" model="ir.actions.act_window">
    <field name="name">Monta Order Status</field>
    <field name="res_model">monta.order.status</field>
    <field name="view_mode">list,form</field>
    <field name="search_view_id" ref="view_monta_order_status_search"/>
    <field name="context">{}</field>
    <field name="domain">[]</field>
  </record>

  <!-- MENU (attach to your existing Monta root menu) -->
  <!-- IMPORTANT: you already have a Monta main menu; we just add a child here. -->
  <menuitem id="menu_monta_order_status"
            name="Order Status"
            parent="menu_monta_root"
            action="action_monta_order_status"
            sequence="20"
            groups="base.group_user"/>

</odoo>
