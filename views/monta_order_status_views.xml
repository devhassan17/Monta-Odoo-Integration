<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- List -->
  <record id="view_monta_order_status_tree" model="ir.ui.view">
    <field name="name">monta.order.status.list</field>
    <field name="model">monta.order.status</field>
    <field name="arch" type="xml">
      <list string="Monta Orders" create="0" delete="0">
        <field name="order_name"/>
        <field name="sale_order_id"/>
        <field name="status"/>
        <field name="status_code"/>
        <field name="source"/>
        <field name="track_trace"/>
        <field name="delivery_date"/>
        <field name="last_sync"/>
      </list>
    </field>
  </record>

  <!-- Search -->
  <record id="view_monta_order_status_search" model="ir.ui.view">
    <field name="name">monta.order.status.search</field>
    <field name="model">monta.order.status</field>
    <field name="arch" type="xml">
      <search string="Search Monta Orders">
        <field name="order_name"/>
        <field name="sale_order_id"/>
        <field name="status"/>
        <field name="status_code"/>
        <field name="source"/>
        <field name="track_trace"/>
        <field name="delivery_date"/>
        <field name="last_sync"/>
        <filter string="Shipped" name="flt_shipped" domain="[('status','ilike','ship')]" help="Shipped / In transit"/>
        <filter string="Has Track&Trace" name="flt_tt" domain="[('track_trace','!=',False)]"/>
        <group expand="0" string="Group By">
          <filter string="Source" context="{'group_by':'source'}"/>
          <filter string="Status" context="{'group_by':'status'}"/>
          <filter string="Sales Order" context="{'group_by':'sale_order_id'}"/>
          <filter string="Delivery Date" context="{'group_by':'delivery_date'}"/>
        </group>
      </search>
    </field>
  </record>

  <!-- Form -->
  <record id="view_monta_order_status_form" model="ir.ui.view">
    <field name="name">monta.order.status.form</field>
    <field name="model">monta.order.status</field>
    <field name="arch" type="xml">
      <form string="Monta Order Snapshot" create="0" delete="0" edit="0">
        <sheet>
          <group>
            <field name="order_name" readonly="1"/>
            <field name="sale_order_id" readonly="1"/>
          </group>
          <group>
            <field name="status" readonly="1"/>
            <field name="status_code" readonly="1"/>
            <field name="source" readonly="1"/>
          </group>
          <group>
            <field name="track_trace" readonly="1"/>
            <field name="delivery_date" readonly="1"/>
            <field name="last_sync" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action -->
  <record id="action_monta_order_status" model="ir.actions.act_window">
    <field name="name">Monta Orders</field>
    <field name="res_model">monta.order.status</field>
    <field name="view_mode">list,form</field>
    <field name="search_view_id" ref="view_monta_order_status_search"/>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        No Monta snapshots yet
      </p>
      <p>They will appear after the cron runs (or run it manually in Odoo shell).</p>
    </field>
  </record>
</odoo>
