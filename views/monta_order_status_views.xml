<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List (not 'tree' in v18) -->
    <record id="view_monta_order_status_list" model="ir.ui.view">
        <field name="name">monta.order.status.list</field>
        <field name="model">monta.order.status</field>
        <field name="arch" type="xml">
            <list create="0" delete="0" string="Monta Orders">
                <field name="order_name"/>
                <field name="sale_order_id"/>
                <field name="order_status"/>
                <field name="delivery_message" optional="hide"/>
                <field name="monta_order_ref" string="Monta Order Id/Number"/>
                <field name="track_trace_url" string="Track &amp; Trace URL"/>
                <field name="delivery_date"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <!-- Search -->
    <record id="view_monta_order_status_search" model="ir.ui.view">
        <field name="name">monta.order.status.search</field>
        <field name="model">monta.order.status</field>
        <field name="arch" type="xml">
            <search string="Search Monta Status">
                <field name="order_name"/>
                <field name="sale_order_id"/>
                <field name="order_status"/>
                <field name="monta_order_ref"/>
                <field name="track_trace_url" string="Track &amp; Trace URL"/>
                <filter string="Shipped" name="flt_shipped" domain="[('order_status','ilike','ship')]"/>
                <filter string="Recently Synced" name="flt_recent" domain="[]"
                        context="{'search_default_last_7': 1}"/>
                <group expand="0" string="Group By">
                    <filter string="Order" name="grp_order" context="{'group_by':'order_name'}"/>
                    <filter string="Status" name="grp_status" context="{'group_by':'order_status'}"/>
                    <filter string="Day" name="grp_day" context="{'group_by':'last_sync:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form -->
    <record id="view_monta_order_status_form" model="ir.ui.view">
        <field name="name">monta.order.status.form</field>
        <field name="model">monta.order.status</field>
        <field name="arch" type="xml">
            <form string="Monta Order Status">
                <sheet>
                    <group>
                        <group>
                            <field name="order_name" readonly="1"/>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="monta_order_ref" string="Monta Order Id/Number" readonly="1"/>
                        </group>
                        <group>
                            <field name="order_status" readonly="1"/>
                            <field name="delivery_message" readonly="1"/>
                            <field name="track_trace_url" string="Track &amp; Trace URL" readonly="1"/>
                            <field name="delivery_date" readonly="1"/>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_monta_order_status" model="ir.actions.act_window">
        <field name="name">Monta Order Status</field>
        <field name="res_model">monta.order.status</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_monta_order_status_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Monta status yet.
            </p>
            <p>Use the cron or the manual sync to populate this table.</p>
        </field>
    </record>

    <!-- Menus (use Sales root on v18) -->
    <menuitem id="menu_monta_root"
              name="Monta"
              parent="sale.menu_sale_root"
              sequence="90"
              groups="base.group_user"/>

    <menuitem id="menu_monta_order_status"
              name="Order Status"
              parent="menu_monta_root"
              action="action_monta_order_status"
              sequence="10"
              groups="base.group_user"/>

</odoo>
