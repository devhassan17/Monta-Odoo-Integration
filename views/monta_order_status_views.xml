<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Action -->
  <record id="action_monta_order_status" model="ir.actions.act_window">
    <field name="name">Monta Orders</field>
    <field name="res_model">monta.order.status</field>
    <field name="view_mode">list,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        No Monta orders yet.
      </p>
      <p>
        Status snapshots pulled from Monta. A cron keeps this table in sync every 30 minutes.
      </p>
    </field>
  </record>

  <!-- Menu -->
  <menuitem id="menu_monta_root" name="Monta" sequence="20"
            parent="sales_team.menu_sales" groups="base.group_user"/>
  <menuitem id="menu_monta_orders" name="Orders" sequence="10"
            parent="menu_monta_root" action="action_monta_order_status" groups="base.group_user"/>

  <!-- List (tree) view is called 'list' in Odoo 18 -->
  <record id="view_monta_order_status_list" model="ir.ui.view">
    <field name="name">monta.order.status.list</field>
    <field name="model">monta.order.status</field>
    <field name="arch" type="xml">
      <list string="Monta Orders" create="0">
        <field name="order_name"/>
        <field name="sale_order_id"/>
        <field name="source"/>
        <field name="status"/>
        <field name="status_code"/>
        <field name="track_trace" string="Track &amp; Trace"/>
        <field name="delivery_date"/>
        <field name="last_sync"/>
      </list>
    </field>
  </record>

  <!-- Form view -->
  <record id="view_monta_order_status_form" model="ir.ui.view">
    <field name="name">monta.order.status.form</field>
    <field name="model">monta.order.status</field>
    <field name="arch" type="xml">
      <form string="Monta Order" create="0" edit="0">
        <sheet>
          <group>
            <field name="order_name" readonly="1"/>
            <field name="sale_order_id" readonly="1"/>
            <field name="source" readonly="1"/>
            <field name="status" readonly="1"/>
            <field name="status_code" readonly="1"/>
            <field name="track_trace" readonly="1" string="Track &amp; Trace"/>
            <field name="delivery_date" readonly="1"/>
            <field name="last_sync" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Search view -->
  <record id="view_monta_order_status_search" model="ir.ui.view">
    <field name="name">monta.order.status.search</field>
    <field name="model">monta.order.status</field>
    <field name="arch" type="xml">
      <search string="Search Monta Orders">
        <field name="order_name"/>
        <field name="status"/>
        <field name="status_code"/>
        <field name="sale_order_id"/>
        <filter name="f_orders" string="Source: Orders" domain="[('source','=','orders')]"/>
        <filter name="f_shipments" string="Source: Shipments" domain="[('source','=','shipments')]"/>
        <filter name="f_events" string="Source: Events" domain="[('source','=','events')]"/>
        <filter name="f_recent" string="Synced Today" domain="[('last_sync','&gt;=', (context_today()).strftime('%%Y-%%m-%%d 00:00:00'))]"/>
        <group expand="0" string="Group By">
          <filter name="g_source" string="Source" context="{'group_by':'source'}"/>
          <filter name="g_day" string="Sync Day" context="{'group_by':'last_sync:day'}"/>
        </group>
      </search>
    </field>
  </record>
</odoo>
