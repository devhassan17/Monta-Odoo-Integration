<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Top-level "Monta" menu (no parent dependency) -->
    <menuitem id="menu_monta_root"
              name="Monta"
              sequence="90"
              groups="base.group_user"/>

    <!-- Search view -->
    <record id="view_monta_order_status_search" model="ir.ui.view">
        <field name="name">monta.order.status.search</field>
        <field name="model">monta.order.status</field>
        <field name="arch" type="xml">
            <search string="Search Monta Orders">
                <field name="order_name"/>
                <field name="sale_order_id"/>
                <field name="status"/>
                <field name="status_code"/>
                <field name="source"/>
                <field name="track_trace"/>

                <filter name="today_sync"
                        string="Synced Today"
                        domain="[('last_sync','&gt;=', (context_today().strftime('%Y-%m-%d 00:00:00')))]"/>
                <filter name="has_tnt"
                        string="Has Track &amp; Trace"
                        domain="[('track_trace','!=', False)]"/>
                <filter name="has_eta"
                        string="Has Delivery Date"
                        domain="[('delivery_date','!=', False)]"/>

                <group expand="0" string="Group By">
                    <filter string="Order"
                            name="grp_order"
                            context="{'group_by': 'order_name'}"/>
                    <filter string="Source"
                            name="grp_source"
                            context="{'group_by': 'source'}"/>
                    <filter string="Sales Order"
                            name="grp_so"
                            context="{'group_by': 'sale_order_id'}"/>
                    <filter string="Sync Day"
                            name="grp_sync"
                            context="{'group_by': 'last_sync'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- List (tree) view -->
    <record id="view_monta_order_status_list" model="ir.ui.view">
        <field name="name">monta.order.status.list</field>
        <field name="model">monta.order.status</field>
        <field name="arch" type="xml">
            <list string="Monta Orders" create="0" delete="0" editable="false">
                <field name="order_name"/>
                <field name="sale_order_id"/>
                <field name="status"/>
                <field name="status_code"/>
                <field name="source"/>
                <field name="track_trace" string="Track &amp; Trace" widget="url"/>
                <field name="delivery_date"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <!-- Form view (read-only) -->
    <record id="view_monta_order_status_form" model="ir.ui.view">
        <field name="name">monta.order.status.form</field>
        <field name="model">monta.order.status</field>
        <field name="arch" type="xml">
            <form string="Monta Order Status" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="order_name" readonly="1"/>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="source" readonly="1"/>
                        </group>
                        <group>
                            <field name="status" readonly="1"/>
                            <field name="status_code" readonly="1"/>
                            <field name="track_trace" string="Track &amp; Trace" widget="url" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="delivery_date" readonly="1"/>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Window action -->
    <record id="action_monta_order_status" model="ir.actions.act_window">
        <field name="name">Monta Orders</field>
        <field name="res_model">monta.order.status</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>
                This list shows the latest Monta status snapshot for each Sales Order.
                Use the search filters or group by options to navigate quickly.
            </p>
        </field>
    </record>

    <!-- Menu to open the list -->
    <menuitem id="menu_monta_orders"
              name="Orders Status"
              parent="menu_monta_root"
              action="action_monta_order_status"
              sequence="10"
              groups="base.group_user"/>
</odoo>
