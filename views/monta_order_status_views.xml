<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- ===================== VIEWS ===================== -->

    <!-- List (tree) view — show all fields -->
    <record id="view_monta_order_status_list" model="ir.ui.view">
      <field name="name">monta.order.status.list</field>
      <field name="model">monta.order.status</field>
      <field name="arch" type="xml">
        <list string="Monta Order Status">
          <field name="order_name"/>
          <field name="sale_order_id"/>
          <field name="status"/>
          <field name="status_code"/>
          <field name="source"/>
          <field name="delivery_message" optional="hide"/>
          <field name="monta_order_ref" string="Monta Order Id/Number"/>
          <field name="track_trace" string="Track &amp; Trace URL"/>
          <field name="delivery_date"/>
          <field name="last_sync" string="Last Sync Time"/>
          <!-- audit (optional in list) -->
          <field name="create_date" optional="hide"/>
          <field name="write_date" optional="hide"/>
        </list>
      </field>
    </record>

    <!-- Form view — read-only snapshot -->
    <record id="view_monta_order_status_form" model="ir.ui.view">
      <field name="name">monta.order.status.form</field>
      <field name="model">monta.order.status</field>
      <field name="arch" type="xml">
        <form string="Monta Order Status">
          <sheet>
            <group>
              <group>
                <field name="order_name" readonly="1"/>
                <field name="sale_order_id" readonly="1"/>
                <field name="status" readonly="1"/>
                <field name="status_code" readonly="1"/>
                <field name="source" readonly="1"/>
              </group>
              <group>
                <field name="delivery_message" readonly="1"/>
                <field name="monta_order_ref" string="Monta Order Id/Number" readonly="1"/>
                <field name="track_trace" string="Track &amp; Trace URL" readonly="1"/>
                <field name="delivery_date" readonly="1"/>
                <field name="last_sync" string="Last Sync Time" readonly="1"/>
              </group>
            </group>
            <group string="Audit">
              <field name="create_date" readonly="1"/>
              <field name="write_date" readonly="1"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Search view -->
    <record id="view_monta_order_status_search" model="ir.ui.view">
      <field name="name">monta.order.status.search</field>
      <field name="model">monta.order.status</field>
      <field name="arch" type="xml">
        <search string="Search Monta Order Status">
          <field name="order_name"/>
          <field name="sale_order_id"/>
          <field name="status"/>
          <field name="status_code"/>
          <field name="source"/>
          <field name="monta_order_ref"/>
          <field name="track_trace"/>
          <filter name="flt_shipped" string="Shipped" domain="[('status','ilike','shipped')]"/>
          <filter name="flt_has_tt" string="Has Track &amp; Trace" domain="[('track_trace','!=', False)]"/>
          <group expand="1" string="Group By">
            <filter name="grp_status" string="Status" context="{'group_by':'status'}"/>
            <filter name="grp_source" string="Source" context="{'group_by':'source'}"/>
            <filter name="grp_sale_order" string="Sale Order" context="{'group_by':'sale_order_id'}"/>
            <filter name="grp_delivery_date" string="Delivery Date" context="{'group_by':'delivery_date'}"/>
          </group>
        </search>
      </field>
    </record>

    <!-- ===================== ACTION ===================== -->

    <record id="action_monta_order_status" model="ir.actions.act_window">
      <field name="name">Monta Order Status</field>
      <field name="res_model">monta.order.status</field>
      <field name="view_mode">list,form</field>
      <field name="search_view_id" ref="view_monta_order_status_search"/>
      <field name="help" type="html">
        <p>
          This table stores a snapshot of order status pulled from Monta.
          Use your cron or the manual sync to populate it.
        </p>
      </field>
    </record>

    <!-- ===================== MENUS ===================== -->

    <!-- Safe top-level menu (prevents parent not found errors) -->
    <menuitem id="menu_monta_root"
              name="Monta"
              sequence="90"
              groups="base.group_user"/>

    <!-- Child menu opening the list -->
    <menuitem id="menu_monta_order_status"
              name="Order Status"
              parent="menu_monta_root"
              action="action_monta_order_status"
              sequence="20"
              groups="base.group_user"/>

  </data>
</odoo>
