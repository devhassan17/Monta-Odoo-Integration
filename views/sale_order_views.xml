<odoo>
    <record id="view_order_form_monta_integration" model="ir.ui.view">
        <field name="name">sale.order.form.monta.integration</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="monta_order_id" attrs="{'invisible': [('monta_order_sent', '=', False)]}"/>
                <field name="monta_order_sent" invisible="1"/>
            </xpath>
            
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="action_push_to_monta" type="object" string="Push to Monta" 
                            class="oe_stat_button" icon="fa-truck"
                            attrs="{'invisible': [('monta_order_sent', '=', True)]}"/>
                </div>
            </xpath>
            
            <xpath expr="//notebook/page[@name='sale_order_page']" position="inside">
                <page string="Monta Shipments" name="monta_shipments" attrs="{'invisible': [('monta_order_sent', '=', False)]}">
                    <field name="monta_shipment_ids">
                        <tree>
                            <field name="name"/>
                            <field name="state"/>
                            <field name="carrier_tracking_ref"/>
                            <field name="scheduled_date"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>