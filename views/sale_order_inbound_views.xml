<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Button on sale.order form -->
    <record id="view_order_form_monta_inbound" model="ir.ui.view">
      <field name="name">sale.order.form.monta.inbound</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
          <button name="action_monta_pull_now"
                  type="object"
                  class="oe_highlight"
                  string="Pull from Monta (now)"/>
        </xpath>

        <!-- info box -->
        <xpath expr="//sheet/notebook" position="inside">
          <page string="Monta Inbound">
            <group>
              <group>
                <field name="monta_remote_status" readonly="1"/>
                <field name="monta_carrier" readonly="1"/>
                <field name="monta_tracking_number" readonly="1" widget="char"/>
                <field name="monta_tracking_url" readonly="1"/>
              </group>
              <group>
                <field name="monta_delivered_at" readonly="1"/>
                <field name="monta_last_pull" readonly="1"/>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>

  </data>
</odoo>
