<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- View -->
        <record id="view_monta_config_form" model="ir.ui.view">
            <field name="name">monta.config.form</field>
            <field name="model">monta.config</field>
            <field name="arch" type="xml">
                <form string="Monta Configuration">
                    <sheet>
                        <group>
                            <field name="name" string="Configuration Name"/>
                            <field name="monta_endpoint" string="API Endpoint" placeholder="https://api-v6.monta.nl/"/>
                            <field name="monta_username" string="API Username"/>
                            <field name="monta_password" string="API Password" password="True"/>
                            <field name="monta_webhook_secret" string="Webhook Secret" password="True"/>
                        </group>
                        <footer>
                            <button name="test_monta_connection" string="Test Connection" type="object" class="btn-primary"/>
                            <field name="active" widget="boolean_button" string="Active"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_monta_config" model="ir.actions.act_window">
            <field name="name">Monta Configuration</field>
            <field name="res_model">monta.config</field>
            <field name="view_mode">form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_monta_root" name="Monta Integration"/>
        <menuitem id="menu_monta_config" name="Configuration"
                  parent="menu_monta_root" action="action_monta_config"/>

    </data>
</odoo>