<odoo>
    <record id="res_config_settings_view_form_inherit_monta" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.monta</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div name="setting_monta_integration" position="inside">
                <h2>Monta Integration</h2>
                <div class="row mt16">
                    <div class="col-md-6">
                        <label for="monta_endpoint"/>
                        <field name="monta_endpoint"/>
                    </div>
                </div>
                <div class="row mt16">
                    <div class="col-md-6">
                        <label for="monta_username"/>
                        <field name="monta_username"/>
                    </div>
                    <div class="col-md-6">
                        <label for="monta_password"/>
                        <field name="monta_password" password="True"/>
                    </div>
                </div>
                <button name="test_monta_connection" type="object" string="Test Connection" class="btn-primary"/>
            </div>
        </field>
    </record>
</odoo>