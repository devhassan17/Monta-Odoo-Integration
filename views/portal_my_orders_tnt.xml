<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_table_tnt_sale_order"
              inherit_id="portal.portal_table"
              name="Portal Table: T&amp;T for Sale Orders">

        <!-- Add T&T column header -->
        <xpath expr="//thead/tr/th[last()]" position="after">
            <th class="text-end"
                t-if="docs and docs[0]._name == 'sale.order'">
                T&amp;T
            </th>
        </xpath>

        <!-- Add T&T column value -->
        <xpath expr="//tbody/tr/td[last()]" position="after">
            <td class="text-end"
                t-if="doc and doc._name == 'sale.order'">
                <t t-if="doc.monta_track_trace">
                    <a t-att-href="doc.monta_track_trace"
                       target="_blank"
                       rel="noopener noreferrer">
                        Track
                    </a>
                </t>
                <t t-else="">-</t>
            </td>
        </xpath>

    </template>

</odoo>
