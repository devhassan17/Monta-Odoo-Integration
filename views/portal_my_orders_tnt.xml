<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Track & Trace column on Portal > My Orders -->
    <template id="portal_my_orders_tnt"
              inherit_id="sale.portal_my_orders"
              name="Portal My Orders: Track &amp; Trace">

        <!-- Add header column -->
        <xpath expr="//t[@t-set='table_header']//th[last()]" position="after">
            <th class="text-end">T&amp;T</th>
        </xpath>

        <!-- Add row column -->
        <xpath expr="//t[@t-set='table_row']//td[last()]" position="after">
            <td class="text-end">
                <t t-if="order.monta_track_trace">
                    <a t-att-href="order.monta_track_trace"
                       target="_blank"
                       rel="noopener noreferrer">
                        Track
                    </a>
                </t>
                <t t-else="">-</t>
            </td>
        </xpath>

    </template>
</odoo>
