<odoo>
  <template id="portal_my_orders_track_link" inherit_id="sale.portal_my_orders">
    <!-- Add new column header -->
    <xpath expr="//thead/tr" position="inside">
      <th class="text-center">Track & Trace</th>
    </xpath>
    <!-- Add new column cells in each order row -->
    <xpath expr="//t[@t-foreach='orders']//tr" position="inside">
      <td class="text-center">
        <t t-if="order.monta_track_trace">
          <a t-att-href="order.monta_track_trace" target="_blank">Track</a>
        </t>
        <t t-else="-</t> <!-- Display dash if no link -->
      </td>
    </xpath>
  </template>
</odoo>
