<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_sale_order_row_track_trace"
              inherit_id="portal.portal_my_orders"
              name="Extend Sale Order Row with Track &amp; Trace Link">

        <xpath expr="//td[1]" position="inside">
            <t t-if="doc._name == 'sale.order' and doc.monta_track_trace">
                <div class="mt-1">
                    <a t-att-href="doc.monta_track_trace"
                       target="_blank"
                       rel="noopener noreferrer"
                       class="small text-muted">
                        Track shipment
                    </a>
                </div>
            </t>
        </xpath>

    </template>

</odoo>
