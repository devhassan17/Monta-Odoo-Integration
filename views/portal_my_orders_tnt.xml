<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_sale_order_track_column"
              inherit_id="sale.portal_my_orders"
              name="Portal My Orders: Add T&T Column">

        <!-- Add header column -->
        <xpath expr="//thead/tr" position="inside">
            <th class="text-end">T&amp;T</th>
        </xpath>

        <!-- Add column content -->
        <xpath expr="//tbody/tr" position="inside">
            <td class="text-end">
                <t t-if="order.monta_track_trace">
                    <a t-att-href="order.monta_track_trace"
                       target="_blank"
                       rel="noopener noreferrer">
                        Track
                    </a>
                </t>
                <t t-else="">-</t>
            </td>
        </xpath>

    </template>

</odoo>
