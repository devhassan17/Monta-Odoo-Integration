<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM VIEW (keep yours if it's already working) -->
    <record id="view_product_template_form_monta_stock" model="ir.ui.view">
        <field name="name">product.template.form.monta.stock</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Monta Stock">
                    <group>
                        <field name="x_monta_min_stock"/>
                        <field name="x_monta_last_stock" readonly="1"/>
                        <field name="x_is_sold_out" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- LIST VIEW: Odoo 18 uses <list> instead of <tree> -->
    <record id="view_product_template_list_monta_stock" model="ir.ui.view">
        <field name="name">product.template.list.monta.stock</field>
        <field name="model">product.template</field>
        <!-- Base product template list view in Odoo 18 -->
        <field name="inherit_id" ref="product.product_template_list_view"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <!-- Inject after list_price if present -->
            <xpath expr="//list/field[@name='list_price']" position="after">
                <field name="x_monta_min_stock" optional="show"/>
                <field name="x_monta_last_stock" optional="show"/>
                <field name="x_is_sold_out" optional="show"/>
            </xpath>
            <!-- If the anchor ever differs, append near the end as a fallback -->
            <xpath expr="//list" position="inside">
                <!-- Only add if not already present to avoid duplicate columns -->
                <field name="x_monta_min_stock" position="attributes"/>
            </xpath>
        </field>
    </record>

</odoo>
