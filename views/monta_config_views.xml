<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Basic Form View -->
        <record id="view_monta_config_form_basic" model="ir.ui.view">
            <field name="name">monta.config.form.basic</field>
            <field name="model">monta.config</field>
            <field name="arch" type="xml">
                <form string="Monta Configuration">
                    <field name="name"/>
                    <field name="endpoint"/>
                </form>
            </field>
        </record>

        <!-- Basic Tree View -->
        <record id="view_monta_config_tree_basic" model="ir.ui.view">
            <field name="name">monta.config.tree.basic</field>
            <field name="model">monta.config</field>
            <field name="arch" type="xml">
                <tree string="Monta Config">
                    <field name="name"/>
                    <field name="endpoint"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_monta_config_basic" model="ir.actions.act_window">
            <field name="name">Monta Configs</field>
            <field name="res_model">monta.config</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_monta_root_basic" name="Monta Test" sequence="10"/>
        <menuitem id="menu_monta_config_basic" name="Config"
                  parent="menu_monta_root_basic"
                  action="action_monta_config_basic"
                  sequence="20"/>

    </data>
</odoo>
