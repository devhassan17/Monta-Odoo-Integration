<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action -->
    <record id="action_monta_config" model="ir.actions.act_window">
        <field name="name">Monta Configuration</field>
        <field name="res_model">monta.config</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_monta_config"
              name="Configuration"
              parent="monta_menu_root"
              action="action_monta_config"
              sequence="50"
              groups="base.group_system"/>

    <!-- Form View -->
    <record id="view_monta_config_form" model="ir.ui.view">
        <field name="name">monta.config.form</field>
        <field name="model">monta.config</field>
        <field name="arch" type="xml">
            <form string="Monta Configuration">
                <sheet>
                    <group>
                        <group string="API Credentials">
                            <field name="base_url"/>
                            <field name="username"/>
                            <field name="password" password="True"/>
                            <field name="timeout"/>
                        </group>

                        <group string="General Settings">
                            <field name="origin"/>
                            <field name="allowed_base_urls"/>
                            <field name="allowed_company_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
