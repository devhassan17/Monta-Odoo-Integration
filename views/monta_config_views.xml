<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Server Action to open singleton config -->
    <record id="action_monta_config_open" model="ir.actions.server">
        <field name="name">Monta Configuration</field>
        <field name="model_id" ref="base.model_res_company"/>
        <field name="state">code</field>
        <field name="code">action = env['monta.config'].action_open_config()</field>
    </record>

    <!-- Menu points to the server action -->
    <menuitem id="menu_monta_config"
              name="Configuration"
              parent="monta_menu_root"
              action="action_monta_config_open"
              sequence="50"
              groups="base.group_system"/>

    <!-- Form View -->
    <record id="view_monta_config_form" model="ir.ui.view">
        <field name="name">monta.config.form</field>
        <field name="model">monta.config</field>
        <field name="arch" type="xml">
            <form string="Monta Configuration">
                <sheet>
                    <group>
                        <group string="API Credentials">
                            <field name="base_url"/>
                            <field name="username"/>
                            <field name="password" password="True"/>
                            <field name="timeout"/>
                            <field name="channel"/>
                        </group>

                        <group string="General Settings">
                            <field name="origin"/>
                            <field name="allowed_base_urls"/>
                            <field name="allowed_company_ids" widget="many2many_tags"/>
                            <field name="match_loose"/>
                        </group>
                    </group>

                    <group string="Inbound Forecast">
                        <!-- âœ… This is the missing field -->
                        <field name="inbound_enable"/>
                        <field name="warehouse_tz" attrs="{'invisible': [('inbound_enable','=', False)]}"/>
                        <field name="inbound_warehouse_display_name" attrs="{'invisible': [('inbound_enable','=', False)]}"/>

                        <separator string="Supplier code mapping" colspan="4"/>
                        <field name="supplier_code_override" attrs="{'invisible': [('inbound_enable','=', False)]}"/>
                        <field name="default_supplier_code" attrs="{'invisible': [('inbound_enable','=', False)]}"/>
                        <field name="supplier_code_map" attrs="{'invisible': [('inbound_enable','=', False)]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
